[core]
	editor = nvim
	pager = less -FN

[color "branch"]
	current = green
	local = blue
	remote = yellow

[color "status"]
	added = cyan
	changed = magenta
	untracked = blue

[commit]
	gpgsign = true

[diff]
    tool = nvim

[difftool "nvim"]
    cmd = nvim -d \"$LOCAL\" \"$REMOTE\"

[help]
	autocorrect = 1

[init]
	defaultBranch = main

[url "git@github.com:"]
	insteadOf = https://github.com/

[push]
	autoSetupRemote = true

[pull]
	rebase = true

[user]
	email = pawel.darulewski@gmail.com
	name = Pawel Darulewski

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[rerere]
	enabled = false

[includeIf "gitdir:~/repo/**"]
	path = ~/dotfiles/git/maintenance
